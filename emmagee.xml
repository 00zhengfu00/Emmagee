<?xml version="1.0" encoding="UTF-8"?>
<project
    name="complie Emmagee"
    basedir="."
    default="clean" >

    <target name="update_project" >

        <exec
            executable="cmd"
            failonerror="true" >

            <arg line="android update project -n Emmagee -p ." />
        </exec>
    </target>

    <target
        name="debug"
        depends="update_project" >

        <exec
            executable="cmd"
            failonerror="true" >

            <arg line="ant debug" />
        </exec>
    </target>

    <target
        name="clean"
        depends="debug" >

        <delete includeEmptyDirs="true" >

            <fileset dir="./bin" >

                <exclude name="*.apk" />

                <exclude name="AndroidManifest.xml" />
            </fileset>
        </delete>
    </target>

</project>
